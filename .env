# Thong tin cau hinh co so du lieu MySQL
# Luu y: Can thay doi mat khau khi trien khai thuc te
MYSQL_ROOT_PASSWORD=1234
MYSQL_DATABASE=tls_ids
MYSQL_USER=tls_user
MYSQL_PASSWORD=1234

# Thong tin tai khoan ket noi cho Firewall Controller
# Mac dinh su dung chung tai khoan voi backend de don gian hoa
FW_DB_USER=tls_user
FW_DB_PASSWORD=1234
FW_DB_NAME=tls_ids

# Cau hinh cho module thu thap du lieu mang NFStream
# Chon interface mang phu hop voi thiet bi (vi du: eth0, ens33)
CAPTURE_INTERFACE=eth0
# Che do dau ra: url de gui du lieu realtime hoac csv de debug
CIC_OUTPUT_MODE=url

# Thoi gian cho de phan tach cac luong du lieu (don vi: giay)
IDLE_TIMEOUT=10
ACTIVE_TIMEOUT=300

# Cau hinh xac thuc an toan giua Realtime Service va Backend
# Su dung HMAC de dam bao tinh toan ven cua du lieu ingest
REQUIRE_INGEST_HMAC=false
INGEST_HMAC_SECRET=
INGEST_HMAC_MAX_AGE_SEC=120

# Che do tu dong chan: Ghi log hanh dong vao DB khi co bat thuong
AUTO_BLOCK=true

# Cac nguong quyet dinh cua mo hinh Hoc may (ML)
# Nguong xac suat mac dinh la 0.5 cho phan loai nhi phan
MLP_THRESHOLD=0.5
AE_THRESHOLD=0.5
ISO_THRESHOLD=-0.1

# Kiem tra tinh toan ven cua file mo hinh bang hash SHA256
MLP_MODEL_SHA256=
AE_MODEL_SHA256=
SCALER_SHA256=

# Duong dan luu tru cac file mo hinh da huan luyen (.h5, .pkl)
MLP_MODEL_PATH=/app/trained_models/mlp.h5
AE_MODEL_PATH=/app/trained_models/mlp.h5
SCALER_PATH=/app/trained_models/scaler.pkl
ISO_MODEL_PATH=

# Dia chi IP cua may chu MySQL de Firewall Controller ket noi
FW_DB_HOST=127.0.0.1

# Ten dinh danh cho sensor thu thap du lieu
SENSOR_NAME=sensor-1

# Cau hinh mang Docker noi bo cho cac Service
# Thiet lap dai mang con va IP tinh de cac service giao tiep voi nhau
SENSOR_NET_SUBNET=172.30.0.0/24

# Dia chi IP tinh cho tung container trong mang noi bo
MYSQL_IP=172.30.0.10
BACKEND_IP=172.30.0.20
RT_IP=172.30.0.30

# Thiet lap cong cong khai cho MySQL de quan tri ben ngoai
MYSQL_PUBLIC_BIND=0.0.0.0
MYSQL_PUBLIC_PORT=3306